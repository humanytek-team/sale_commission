<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_account_payment_association_date_form" model="ir.ui.view">
    <field name="name">account.payment.association_date.form</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_form"/>
    <field name="arch" type="xml">
      <field name="payment_date" position="after">
        <field name="association_date"/>
      </field>
    </field>
  </record>

  <record id="view_account_payment_invoice_association_date_form" model="ir.ui.view">
    <field name="name">account.payment.invoice.association_date.form</field>
    <field name="model">account.payment</field>
    <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
    <field name="arch" type="xml">
      <field name="payment_date" position="after">
        <field name="association_date"/>
      </field>
    </field>
  </record>
</odoo>